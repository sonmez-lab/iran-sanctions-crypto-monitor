# Iran Sanctions Crypto Monitor - Environment Variables

# Application
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/iran_sanctions_monitor

# Redis
REDIS_URL=redis://localhost:6379/0

# Blockchain API Keys (optional but recommended for higher rate limits)
ETHERSCAN_API_KEY=your_etherscan_api_key
TRONGRID_API_KEY=your_trongrid_api_key
BLOCKCHAIR_API_KEY=your_blockchair_api_key

# Monitoring Settings
MONITOR_INTERVAL_MINUTES=15
ALERT_THRESHOLD_USD=10000

# OFAC SDN Update Interval
OFAC_UPDATE_INTERVAL_HOURS=24
